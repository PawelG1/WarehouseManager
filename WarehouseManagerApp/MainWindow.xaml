<Window
    x:Class="WarehouseManagerApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:WarehouseManagerApp.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WarehouseManagerApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Warehouse Manager"
    Width="1280"
    Height="720"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.10*" />
            <RowDefinition Height="0.90*" />
        </Grid.RowDefinitions>

        <!--  header with logo on the left and the label with current page on the right  -->
        <Controls:Header Grid.Row="0" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.15*" />
                <ColumnDefinition Width="0.25*" />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>

            <!--  navigation bar on the left side of the screen  -->
            <Controls:NavBarControl Grid.Column="0" />

            <!--  Products List  -->
            <Controls:ProductsList x:Name="ProductsListControl" Grid.Column="2" />

            <!--  Add Product Form  -->
            <Controls:AddProductControl x:Name="AddProductControl" Grid.Column="1" />

        </Grid>

    </Grid>
</Window>
