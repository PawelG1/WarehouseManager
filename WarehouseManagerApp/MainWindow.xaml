<Window
    x:Class="WarehouseManagerApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:WarehouseManagerApp.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WarehouseManagerApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Warehouse Manager"
    Width="1280"
    Height="720"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.10*" />
            <RowDefinition Height="0.90*" />
        </Grid.RowDefinitions>

        <!--  header with logo on the left and the label with current page on the right  -->
        <Controls:Header Grid.Row="0" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.15*" />
                <ColumnDefinition Width="0.85*" />
            </Grid.ColumnDefinitions>

            <!--  navigation bar on the left side of the screen  -->
            <Controls:NavBarControl Grid.Column="0" />

            <!--  - content  -->
            <Grid Grid.Column="1">

                <!--  dashboard  -->
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Dashboard">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <TextBlock Text="Coming Soon..." />
                </Grid>
                <!--  dashbaord  -->

                <!--  inventory view  -->
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Inventory">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Controls:ProductsList x:Name="ProductsListControl" />
                    <Controls:AddProductControl x:Name="AddProductControl" Visibility="Collapsed" />
                </Grid>
                <!--  inventory END  -->

                <!--  Warehouses  -->
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Warehouses">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    
                    <Controls:WarehousesList x:Name="WarehousesListControl" />
                    
                    <!--  Add Warehouse Form Overlay  -->
                    <Grid Background="#CC000000">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowAddWarehouseForm}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Grid
                            Width="600"
                            Height="500"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                            <Controls:AddWarehouseControl x:Name="AddWarehouseControl" />
                        </Grid>
                    </Grid>

                    <!--  Edit Warehouse Form Overlay  -->
                    <Grid Background="#CC000000">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowEditWarehouseForm}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Grid
                            Width="600"
                            Height="500"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                            <Controls:EditWarehouseControl x:Name="EditWarehouseControl" />
                        </Grid>
                    </Grid>
                </Grid>
                <!--  Warehouses END  -->

                <!--  about section  -->
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="About">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Controls:AboutControl />
                </Grid>
                <!--  About section END  -->

            </Grid>
            <!--  content END  -->
        </Grid>

    </Grid>
</Window>
