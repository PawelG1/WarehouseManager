<UserControl
    x:Class="WarehouseManagerApp.Views.Controls.NavBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WarehouseManagerApp.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Grid.Row="1" Orientation="Vertical">
        <StackPanel.Resources>
            <Style TargetType="StackPanel">
                <Setter Property="Background" Value="#00334e" />
            </Style>
            <Style x:Key="MenuBtn" TargetType="Button">
                <Setter Property="Margin" Value="0,0.0,0,0.8" />
                <Setter Property="Padding" Value="10,5" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Background" Value="#004d73" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="0" />
                    </Style>
                </Style.Resources>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="RoyalBlue" />
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Background" Value="Navy" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </StackPanel.Resources>
        <Button
            Command="{Binding NavigateToDashboardCommand}"
            Content="Dashboard"
            Style="{StaticResource MenuBtn}" />
        <Button
            Command="{Binding NavigateToInventoryCommand}"
            Content="Inventory"
            Style="{StaticResource MenuBtn}" />
        <Button
            Command="{Binding NavigateToWarehousesCommand}"
            Content="Warehouses"
            Style="{StaticResource MenuBtn}" />
        <Button
            Command="{Binding NavigateToAboutCommand}"
            Content="About"
            Style="{StaticResource MenuBtn}" />
    </StackPanel>
</UserControl>
