<UserControl
    x:Class="WarehouseManagerApp.Views.Controls.AddWarehouseControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WarehouseManagerApp.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <Border
        Padding="20"
        Background="White"
        BorderBrush="#004d73"
        BorderThickness="2"
        CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Title  -->
            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,20"
                FontSize="22"
                FontWeight="Bold"
                Foreground="#0F1C2D"
                Text="Add New Warehouse" />

            <!--  Messages  -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <!--  Success Message  -->
                <Border
                    Padding="10"
                    Margin="0,0,0,5"
                    Background="#E8F5E9"
                    BorderBrush="#4CAF50"
                    BorderThickness="1"
                    CornerRadius="3">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasSuccess}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock
                        FontSize="14"
                        Foreground="#2E7D32"
                        Text="{Binding SuccessMessage}"
                        TextWrapping="Wrap" />
                </Border>

                <!--  Error Message  -->
                <Border
                    Padding="10"
                    Margin="0,0,0,5"
                    Background="#FFEBEE"
                    BorderBrush="#F44336"
                    BorderThickness="1"
                    CornerRadius="3">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasError}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock
                        FontSize="14"
                        Foreground="#D32F2F"
                        Text="{Binding ErrorMessage}"
                        TextWrapping="Wrap" />
                </Border>

                <!--  Validation Error  -->
                <Border
                    Padding="10"
                    Background="#FFF3E0"
                    BorderBrush="#FF9800"
                    BorderThickness="1"
                    CornerRadius="3">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasValidationError}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock
                        FontSize="14"
                        Foreground="#E65100"
                        Text="{Binding ValidationError}"
                        TextWrapping="Wrap" />
                </Border>
            </StackPanel>

            <!--  Form  -->
            <StackPanel Grid.Row="2">
                <!--  Name  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="Warehouse Name *" />
                <TextBox
                    Margin="0,0,0,15"
                    Padding="10"
                    FontSize="14"
                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="IsEnabled" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!--  Location  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="Location *" />
                <TextBox
                    Margin="0,0,0,15"
                    Padding="10"
                    FontSize="14"
                    Text="{Binding Location, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="IsEnabled" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!--  Capacity  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="Capacity (m?) *" />
                <TextBox
                    Margin="0,0,0,15"
                    Padding="10"
                    FontSize="14"
                    Text="{Binding CapacityM3, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="IsEnabled" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>

            <!--  Buttons  -->
            <StackPanel
                Grid.Row="3"
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,10,0"
                    Padding="20,10"
                    Command="{Binding AddWarehouseCommand}"
                    Content="Add Warehouse"
                    FontSize="14"
                    FontWeight="Medium">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#004d73" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5" />
                                </Style>
                            </Style.Resources>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="RoyalBlue" />
                                </Trigger>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Setter Property="Content" Value="Adding..." />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button
                    Padding="20,10"
                    Command="{Binding ClearFormCommand}"
                    Content="Clear"
                    FontSize="14">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="LightGray" />
                            <Setter Property="Foreground" Value="Black" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5" />
                                </Style>
                            </Style.Resources>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Gray" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            
            <!--  Close button (X) in top right corner  -->
            <Button
                Grid.Row="0"
                Width="30"
                Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,-10,-10,0"
                Command="{Binding DataContext.CloseAddWarehouseFormCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                Content="?"
                FontSize="16"
                FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#F44336" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Style.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="15" />
                            </Style>
                        </Style.Resources>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D32F2F" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
