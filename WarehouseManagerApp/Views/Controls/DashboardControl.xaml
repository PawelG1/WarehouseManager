<UserControl
    x:Class="WarehouseManagerApp.Views.Controls.DashboardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:WarehouseManagerApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WarehouseManagerApp.Views.Controls"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:PercentageToWidthConverter x:Key="PercentageToWidthConverter" />
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header with Refresh button  -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#0F1C2D"
                    Text="Dashboard Overview" />

                <Button
                    Padding="15,8"
                    HorizontalAlignment="Right"
                    Command="{Binding RefreshCommand}"
                    Content="Refresh"
                    FontSize="14">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#004d73" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5" />
                                </Style>
                            </Style.Resources>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="RoyalBlue" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!--  Statistics Cards  -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Total Warehouses Card  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    Padding="20"
                    Background="#E3F2FD"
                    BorderBrush="#004d73"
                    BorderThickness="2"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            Foreground="#004d73"
                            Text="Total Warehouses" />
                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="36"
                            FontWeight="Bold"
                            Foreground="#004d73"
                            Text="{Binding TotalWarehouses}" />
                    </StackPanel>
                </Border>

                <!--  Total Products Card  -->
                <Border
                    Grid.Column="1"
                    Margin="5,0,5,0"
                    Padding="20"
                    Background="#E3F2FD"
                    BorderBrush="#004d73"
                    BorderThickness="2"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            Foreground="#004d73"
                            Text="Total Products" />
                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="36"
                            FontWeight="Bold"
                            Foreground="#004d73"
                            Text="{Binding TotalProducts}" />
                    </StackPanel>
                </Border>

                <!--  Low Stock Items Card  -->
                <Border
                    Grid.Column="2"
                    Margin="5,0,5,0"
                    Padding="20"
                    Background="#FFF3E0"
                    BorderBrush="#FF9800"
                    BorderThickness="2"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            Foreground="#E65100"
                            Text="Low Stock Items" />
                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="36"
                            FontWeight="Bold"
                            Foreground="#E65100"
                            Text="{Binding LowStockItems}" />
                    </StackPanel>
                </Border>

                <!--  Critical Capacity Card  -->
                <Border
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    Padding="20"
                    Background="#FFEBEE"
                    BorderBrush="#F44336"
                    BorderThickness="2"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            Foreground="#D32F2F"
                            Text="Critical Capacity" />
                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="36"
                            FontWeight="Bold"
                            Foreground="#D32F2F"
                            Text="{Binding CriticalCapacityWarehouses}" />
                    </StackPanel>
                </Border>
            </Grid>

            <!--  Charts Row  -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Warehouse Capacity Bars  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    Padding="15"
                    Background="White"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#0F1C2D"
                            Text="Warehouse Utilization" />

                        <TextBlock
                            Margin="0,5,0,15"
                            FontSize="12"
                            Foreground="#666666"
                            Text="Percentage of products vs capacity (mÂ³)" />

                        <ItemsControl ItemsSource="{Binding WarehouseCapacities}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,15">
                                        <Grid Margin="0,0,0,5">
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="Medium"
                                                Text="{Binding WarehouseName}" />
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="14"
                                                FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#004d73" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCritical}" Value="True">
                                                                <Setter Property="Foreground" Value="#F44336" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <Run Text="{Binding UtilizationPercentage, StringFormat={}{0:F1}%}" />
                                            </TextBlock>
                                        </Grid>

                                        <Border
                                            Height="30"
                                            Background="#E0E0E0"
                                            CornerRadius="5">
                                            <Border HorizontalAlignment="Left" CornerRadius="5">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#004d73" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCritical}" Value="True">
                                                                <Setter Property="Background" Value="#F44336" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Border.Width>
                                                    <MultiBinding Converter="{StaticResource PercentageToWidthConverter}">
                                                        <Binding Path="UtilizationPercentage" />
                                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Border, AncestorLevel=1}" />
                                                    </MultiBinding>
                                                </Border.Width>
                                                <TextBlock
                                                    Margin="10,0,0,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Foreground="White">
                                                    <Run Text="{Binding CurrentProducts}" />
                                                    <Run Text="/" />
                                                    <Run Text="{Binding Capacity}" />
                                                    <Run Text="products" />
                                                </TextBlock>
                                            </Border>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Foreground="#666666">
                            <Run Text="Average Utilization: " />
                            <Run FontWeight="Bold" Text="{Binding AverageUtilization, StringFormat={}{0:F1}%}" />
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!--  Product Distribution Pie Chart  -->
                <Border
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Padding="15"
                    Background="White"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#0F1C2D"
                            Text="Products Distribution" />

                        <lvc:PieChart
                            Height="300"
                            Margin="0,10,0,0"
                            Series="{Binding ProductDistributionSeries}" />
                    </StackPanel>
                </Border>
            </Grid>

            <!--  Warehouse Details and Alerts  -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Warehouse Capacity Details  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    Padding="15"
                    Background="White"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#0F1C2D"
                            Text="Warehouse Capacity Status" />

                        <ListView
                            MaxHeight="250"
                            Margin="0,10,0,0"
                            BorderThickness="0"
                            Focusable="False"
                            IsHitTestVisible="True"
                            ItemsSource="{Binding WarehouseCapacities}"
                            SelectionMode="Single">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Setter Property="Focusable" Value="False" />
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Foreground" Value="Black" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,5,0,5"
                                        Padding="10"
                                        CornerRadius="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#F5F5F5" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCritical}" Value="True">
                                                        <Setter Property="Background" Value="#FFEBEE" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock
                                                    FontSize="14"
                                                    FontWeight="Bold"
                                                    Text="{Binding WarehouseName}" />
                                                <TextBlock FontSize="12" Foreground="#666666">
                                                    <Run Text="{Binding CurrentProducts}" />
                                                    <Run Text="/" />
                                                    <Run Text="{Binding Capacity}" />
                                                    <Run Text="products" />
                                                </TextBlock>
                                            </StackPanel>

                                            <TextBlock
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#004d73" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCritical}" Value="True">
                                                                <Setter Property="Foreground" Value="#F44336" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <Run Text="{Binding UtilizationPercentage, StringFormat={}{0:F1}%}" />
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!--  Low Stock Alerts  -->
                <Border
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Padding="15"
                    Background="White"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#0F1C2D"
                            Text="Low Stock Alerts" />

                        <ListView
                            MaxHeight="250"
                            Margin="0,10,0,0"
                            BorderThickness="0"
                            Focusable="False"
                            IsHitTestVisible="True"
                            ItemsSource="{Binding LowStockProducts}"
                            SelectionMode="Single">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Setter Property="Focusable" Value="False" />
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Foreground" Value="Black" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,5,0,5"
                                        Padding="10"
                                        Background="#F5F5F5"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <StackPanel>
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="Bold"
                                                Foreground="#E65100"
                                                Text="{Binding ProductName}" />
                                            <TextBlock FontSize="12" Foreground="#666666">
                                                <Run Text="SKU:" />
                                                <Run Text="{Binding SKU}" />
                                            </TextBlock>
                                            <TextBlock FontSize="12" Foreground="#E65100">
                                                <Run Text="Stock:" />
                                                <Run FontWeight="Bold" Text="{Binding CurrentQuantity}" />
                                                <Run Text="/" />
                                                <Run Text="{Binding MinimumQuantity}" />
                                                <Run Text="(Min)" />
                                            </TextBlock>
                                            <TextBlock FontSize="11" Foreground="#666666">
                                                <Run Text="{Binding WarehouseName}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>


                    </StackPanel>
                </Border>
            </Grid>

            <!--  Loading Overlay  -->
            <Grid
                Grid.Row="0"
                Grid.RowSpan="4"
                Background="#80000000">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Setter Property="IsHitTestVisible" Value="False" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="IsHitTestVisible" Value="True" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Loading Dashboard..." />
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
