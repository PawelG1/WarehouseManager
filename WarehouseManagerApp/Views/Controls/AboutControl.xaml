<UserControl
    x:Class="WarehouseManagerApp.Views.Controls.AboutControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WarehouseManagerApp.Views.Controls"
    xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid MaxWidth="1200" Background="White">
        <markdig:MarkdownViewer
            x:Name="MarkdownViewer"
            Padding="20"
            HorizontalAlignment="Center"
            Markdown="{Binding ReadmeContent}" />
    </Grid>

</UserControl>
