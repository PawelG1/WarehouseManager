<UserControl
    x:Class="WarehouseManagerApp.Views.Controls.AddProductControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WarehouseManagerApp.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="DisableWhenLoadingTextBox" TargetType="TextBox">
            <Setter Property="IsEnabled" Value="True" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DisableWhenLoadingComboBox" TargetType="ComboBox">
            <Setter Property="IsEnabled" Value="True" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border
        Margin="10"
        Padding="20"
        Background="White"
        BorderBrush="LightGray"
        BorderThickness="1"
        CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,20"
                FontSize="18"
                FontWeight="Bold"
                Text="Add New Product" />

            <!--  Close button (X) in top right corner  -->
            <Button
                Grid.Row="0"
                Width="30"
                Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,-10,-10,0"
                Command="{Binding DataContext.CloseAddProductFormCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                Content="✕"
                FontSize="16"
                FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#F44336" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Style.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="15" />
                            </Style>
                        </Style.Resources>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D32F2F" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!--  Messages  -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <!--  Success Message  -->
                <Border
                    Padding="10"
                    Background="#D4EDDA"
                    BorderBrush="#C3E6CB"
                    BorderThickness="1"
                    CornerRadius="3">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasSuccess}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock
                        Foreground="#155724"
                        Text="{Binding SuccessMessage}"
                        TextWrapping="Wrap" />
                </Border>

                <!--  Validation Error  -->
                <Border
                    Padding="10"
                    Background="#FFF3CD"
                    BorderBrush="#FFEAA7"
                    BorderThickness="1"
                    CornerRadius="3">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasValidationError}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock
                        Foreground="#856404"
                        Text="{Binding ValidationError}"
                        TextWrapping="Wrap" />
                </Border>

                <!--  Error Message  -->
                <Border
                    Padding="10"
                    Background="#F8D7DA"
                    BorderBrush="#F5C6CB"
                    BorderThickness="1"
                    CornerRadius="3">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasError}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock
                        Foreground="#721C24"
                        Text="{Binding ErrorMessage}"
                        TextWrapping="Wrap" />
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Product Name:" />
                <TextBox
                    Padding="5"
                    Style="{StaticResource DisableWhenLoadingTextBox}"
                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,10">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="SKU:" />
                <TextBox
                    Padding="5"
                    Style="{StaticResource DisableWhenLoadingTextBox}"
                    Text="{Binding Sku, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="0,0,0,10">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Quantity:" />
                <TextBox
                    Padding="5"
                    Style="{StaticResource DisableWhenLoadingTextBox}"
                    Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="0,0,0,10">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Minimum Quantity:" />
                <TextBox
                    Padding="5"
                    Style="{StaticResource DisableWhenLoadingTextBox}"
                    Text="{Binding MinimumQuantity, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Row="6" Margin="0,0,0,10">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Volume per Unit (m³):" />
                <TextBox
                    Padding="5"
                    Style="{StaticResource DisableWhenLoadingTextBox}"
                    Text="{Binding VolumePerUnitM3, UpdateSourceTrigger=PropertyChanged, StringFormat=F2, ConverterCulture=en-US}" />
                <TextBlock
                    Margin="0,2,0,0"
                    FontSize="10"
                    Foreground="#666666"
                    Text="How much space (in cubic meters) does one unit of this product occupy? Use dot (.) as decimal separator." />
            </StackPanel>

            <StackPanel Grid.Row="7" Margin="0,0,0,20">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Warehouse:" />
                <ComboBox
                    Padding="5"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding Warehouses}"
                    SelectedValue="{Binding SelectedWarehouseId}"
                    SelectedValuePath="Id"
                    Style="{StaticResource DisableWhenLoadingComboBox}" />
            </StackPanel>

            <StackPanel
                Grid.Row="8"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Padding="15,8"
                    Command="{Binding ClearFormCommand}"
                    Content="Clear">
                    <Button.Style>
                        <Style BasedOn="{StaticResource SecondaryButtonStyle}" TargetType="Button">
                            <Setter Property="IsEnabled" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button
                    Margin="10,0,0,0"
                    Padding="15,8"
                    Command="{Binding AddProductCommand}"
                    Content="Add Product">
                    <Button.Style>
                        <Style BasedOn="{StaticResource PrimaryButtonStyle}" TargetType="Button">
                            <Setter Property="IsEnabled" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <Border
                Grid.Row="0"
                Grid.RowSpan="9"
                Background="#80FFFFFF">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <ProgressBar
                    Width="50"
                    Height="50"
                    IsIndeterminate="True" />
            </Border>
        </Grid>
    </Border>
</UserControl>

