<UserControl
    x:Class="WarehouseManagerApp.Views.Controls.Header"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WarehouseManagerApp.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <!--  Sidebar column  -->
            <ColumnDefinition Width="0.15*" />
            <ColumnDefinition Width="0.85*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions />

        <!--  App logo in the upper left corner  -->
        <Border
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#0F1C2D">
            <Image
                Grid.Row="0"
                Grid.Column="0"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                RenderOptions.BitmapScalingMode="HighQuality"
                SnapsToDevicePixels="True"
                Source="/Resources/logo.png"
                Stretch="Uniform"
                UseLayoutRounding="True" />
        </Border>

        <!--  App bar with app title on the right  -->
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="StackPanel">
                    <Setter Property="Background" Value="#0F1C2D" />
                </Style>
            </StackPanel.Resources>

            <Label
                Margin="10,5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Content="{Binding SelectedPage}"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>

    </Grid>
</UserControl>
